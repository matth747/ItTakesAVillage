    <h1 class="display-3 text-center">Fulfill Requests!</h1>
    <main class="container mt-5">
        <section class="row justify-content-around">
            

            
            {{#each requests as |request|}}
            <div class="col-12 col-sm-6 col-lg-4 mb-3">
                <div class="card">
                    <h3 class="card-header">
                        {{request.title}} 
                    </h3>
                    <div class="card-body">
                        <p class="card-text ">
                        {{request.description}}
                        </p>
                    </div>
                
                    <p class="card-footer">Date needed by: {{request.date_needed}}</p>
                    <button class="btn btn-block btn-info fulfill-btn" data-fulfillId="{{request.id}}"><a class="btn-color" href="/request/{{request.id}}">View Request!</a></button>
                </div>
            </div>
            {{/each}}

        </section>
    </main>
    <script src="/js/reqList.js"></script>